<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConfiApp.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="splash.png" WidthRequest="300" HeightRequest="300" Margin="0,50,0,30" />
        <StackLayout Grid.Row="1" Padding="30,20">
            
            
            <Entry Placeholder="Usuario" x:Name="txtEmail"/>
            <Entry Placeholder="Contraseña" x:Name="txtpass" IsPassword="True" Completed="Button_Clicked"/>
            <Button Text="Ingresar" x:Name="btnIngresar" Clicked="Button_Clicked" />

        </StackLayout>
    </Grid>
    
   

</ContentPage>
